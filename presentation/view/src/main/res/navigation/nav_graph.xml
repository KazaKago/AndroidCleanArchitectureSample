<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/cityListFragment">

    <fragment
        android:id="@+id/cityListFragment"
        android:name="com.kazakago.cleanarchitecture.presentation.view.hierarchy.city.CityListFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_city_list">
        <action
            android:id="@+id/action_cityListFragment_to_forecastFragment"
            app:destination="@id/forecastFragment"
            app:enterAnim="@anim/fragment_open_enter"
            app:exitAnim="@anim/fragment_open_exit"
            app:popEnterAnim="@anim/fragment_close_enter"
            app:popExitAnim="@anim/fragment_close_exit" />
        <action
            android:id="@+id/action_cityListFragment_to_aboutFragment"
            app:destination="@id/aboutFragment"
            app:enterAnim="@anim/fragment_open_enter"
            app:exitAnim="@anim/fragment_open_exit"
            app:popEnterAnim="@anim/fragment_close_enter"
            app:popExitAnim="@anim/fragment_close_exit" />
        <action
            android:id="@+id/action_cityListFragment_to_OssLicensesMenuActivity"
            app:destination="@id/ossLicensesMenuActivity" />
    </fragment>
    <fragment
        android:id="@+id/forecastFragment"
        android:name="com.kazakago.cleanarchitecture.presentation.view.hierarchy.forecast.ForecastFragment"
        android:label="{title}"
        tools:layout="@layout/fragment_forecast">
        <argument
            android:name="cityId"
            app:argType="com.kazakago.cleanarchitecture.domain.model.hierarchy.city.CityId" />
        <argument
            android:name="title"
            app:argType="string" />
        <action
            android:id="@+id/action_forecastFragment_to_forecastDescriptionDialog"
            app:destination="@id/forecastDescriptionDialog" />
    </fragment>
    <dialog
        android:id="@+id/forecastDescriptionDialog"
        android:name="com.kazakago.cleanarchitecture.presentation.view.hierarchy.forecast.ForecastDescriptionDialog"
        tools:layout="@layout/dialog_forecast_description">
        <argument
            android:name="cityId"
            app:argType="com.kazakago.cleanarchitecture.domain.model.hierarchy.city.CityId" />
    </dialog>
    <fragment
        android:id="@+id/aboutFragment"
        android:name="com.kazakago.cleanarchitecture.presentation.view.hierarchy.about.AboutFragment"
        android:label="@string/about_title"
        tools:layout="@layout/fragment_about" />
    <activity
        android:id="@+id/ossLicensesMenuActivity"
        android:name="com.google.android.gms.oss.licenses.OssLicensesMenuActivity" />
</navigation>